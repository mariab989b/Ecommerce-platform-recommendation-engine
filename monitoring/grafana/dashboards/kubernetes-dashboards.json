{
  "dashboard": {
    "title": "Kubernetes Infrastructure - ecommerce-platform",
    "tags": ["kubernetes", "infrastructure"],
    "timezone": "browser",
    "panels": [
      {
        "id": 1,
        "title": "Pods Status Overview",
        "type": "stat",
        "gridPos": {"x": 0, "y": 0, "w": 6, "h": 4},
        "targets": [
          {
            "expr": "sum(kube_pod_status_phase{namespace=\"ecommerce-platform\", phase=\"Running\"})",
            "legendFormat": "Running",
            "refId": "A"
          }
        ],
        "options": {
          "colorMode": "background",
          "graphMode": "none",
          "textMode": "value_and_name"
        },
        "fieldConfig": {
          "defaults": {
            "color": {"mode": "thresholds"},
            "thresholds": {
              "mode": "absolute",
              "steps": [
                {"value": 0, "color": "red"},
                {"value": 1, "color": "green"}
              ]
            }
          }
        }
      },
      {
        "id": 2,
        "title": "Pods Pending/Failed",
        "type": "stat",
        "gridPos": {"x": 6, "y": 0, "w": 6, "h": 4},
        "targets": [
          {
            "expr": "sum(kube_pod_status_phase{namespace=\"ecommerce-platform\", phase=~\"Pending|Failed\"})",
            "legendFormat": "Issues",
            "refId": "A"
          }
        ],
        "options": {
          "colorMode": "background",
          "graphMode": "none",
          "textMode": "value_and_name"
        },
        "fieldConfig": {
          "defaults": {
            "color": {"mode": "thresholds"},
            "thresholds": {
              "mode": "absolute",
              "steps": [
                {"value": 0, "color": "green"},
                {"value": 1, "color": "red"}
              ]
            }
          }
        }
      },
      {
        "id": 3,
        "title": "Total Pods in Namespace",
        "type": "stat",
        "gridPos": {"x": 12, "y": 0, "w": 6, "h": 4},
        "targets": [
          {
            "expr": "count(kube_pod_info{namespace=\"ecommerce-platform\"})",
            "legendFormat": "Total Pods",
            "refId": "A"
          }
        ],
        "options": {
          "colorMode": "value",
          "graphMode": "area",
          "textMode": "value_and_name"
        }
      },
      {
        "id": 4,
        "title": "Pod Restarts (Last 24h)",
        "type": "stat",
        "gridPos": {"x": 18, "y": 0, "w": 6, "h": 4},
        "targets": [
          {
            "expr": "sum(increase(kube_pod_container_status_restarts_total{namespace=\"ecommerce-platform\"}[24h]))",
            "legendFormat": "Restarts",
            "refId": "A"
          }
        ],
        "options": {
          "colorMode": "background",
          "graphMode": "none"
        },
        "fieldConfig": {
          "defaults": {
            "color": {"mode": "thresholds"},
            "thresholds": {
              "mode": "absolute",
              "steps": [
                {"value": 0, "color": "green"},
                {"value": 5, "color": "yellow"},
                {"value": 10, "color": "red"}
              ]
            }
          }
        }
      },
      {
        "id": 5,
        "title": "CPU Usage by Pod",
        "type": "timeseries",
        "gridPos": {"x": 0, "y": 4, "w": 12, "h": 8},
        "targets": [
          {
            "expr": "sum(rate(container_cpu_usage_seconds_total{namespace=\"ecommerce-platform\", pod!=\"\"}[5m])) by (pod)",
            "legendFormat": "{{pod}}",
            "refId": "A"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "custom": {"lineWidth": 2, "fillOpacity": 10},
            "unit": "percentunit"
          }
        },
        "options": {
          "tooltip": {"mode": "multi"},
          "legend": {"displayMode": "table", "placement": "right"}
        }
      },
      {
        "id": 6,
        "title": "Memory Usage by Pod",
        "type": "timeseries",
        "gridPos": {"x": 12, "y": 4, "w": 12, "h": 8},
        "targets": [
          {
            "expr": "sum(container_memory_working_set_bytes{namespace=\"ecommerce-platform\", pod!=\"\"}) by (pod)",
            "legendFormat": "{{pod}}",
            "refId": "A"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "custom": {"lineWidth": 2, "fillOpacity": 10},
            "unit": "bytes"
          }
        },
        "options": {
          "tooltip": {"mode": "multi"},
          "legend": {"displayMode": "table", "placement": "right"}
        }
      },
      {
        "id": 7,
        "title": "Pod Restart History",
        "type": "timeseries",
        "gridPos": {"x": 0, "y": 12, "w": 24, "h": 8},
        "targets": [
          {
            "expr": "sum(increase(kube_pod_container_status_restarts_total{namespace=\"ecommerce-platform\"}[5m])) by (pod)",
            "legendFormat": "{{pod}}",
            "refId": "A"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "custom": {"lineWidth": 2, "fillOpacity": 0, "drawStyle": "bars"},
            "unit": "short"
          }
        },
        "options": {
          "tooltip": {"mode": "multi"},
          "legend": {"displayMode": "table", "placement": "bottom"}
        }
      },
      {
        "id": 8,
        "title": "Pods Status by Phase",
        "type": "piechart",
        "gridPos": {"x": 0, "y": 20, "w": 8, "h": 8},
        "targets": [
          {
            "expr": "sum(kube_pod_status_phase{namespace=\"ecommerce-platform\"}) by (phase)",
            "legendFormat": "{{phase}}",
            "refId": "A"
          }
        ],
        "options": {
          "legend": {"displayMode": "table", "placement": "right"},
          "pieType": "donut"
        }
      },
      {
        "id": 9,
        "title": "CPU Requests vs Limits",
        "type": "bargauge",
        "gridPos": {"x": 8, "y": 20, "w": 8, "h": 8},
        "targets": [
          {
            "expr": "sum(kube_pod_container_resource_requests{namespace=\"ecommerce-platform\", resource=\"cpu\"}) by (pod)",
            "legendFormat": "{{pod}} - Requests",
            "refId": "A"
          },
          {
            "expr": "sum(kube_pod_container_resource_limits{namespace=\"ecommerce-platform\", resource=\"cpu\"}) by (pod)",
            "legendFormat": "{{pod}} - Limits",
            "refId": "B"
          }
        ],
        "options": {
          "orientation": "horizontal",
          "displayMode": "gradient"
        },
        "fieldConfig": {
          "defaults": {
            "unit": "short",
            "max": 2
          }
        }
      },
      {
        "id": 10,
        "title": "Memory Requests vs Limits",
        "type": "bargauge",
        "gridPos": {"x": 16, "y": 20, "w": 8, "h": 8},
        "targets": [
          {
            "expr": "sum(kube_pod_container_resource_requests{namespace=\"ecommerce-platform\", resource=\"memory\"}) by (pod)",
            "legendFormat": "{{pod}} - Requests",
            "refId": "A"
          },
          {
            "expr": "sum(kube_pod_container_resource_limits{namespace=\"ecommerce-platform\", resource=\"memory\"}) by (pod)",
            "legendFormat": "{{pod}} - Limits",
            "refId": "B"
          }
        ],
        "options": {
          "orientation": "horizontal",
          "displayMode": "gradient"
        },
        "fieldConfig": {
          "defaults": {
            "unit": "bytes"
          }
        }
      }
    ],
    "refresh": "30s",
    "schemaVersion": 38,
    "time": {
      "from": "now-1h",
      "to": "now"
    },
    "timepicker": {
      "refresh_intervals": ["10s", "30s", "1m", "5m"]
    },
    "editable": true
  }
}