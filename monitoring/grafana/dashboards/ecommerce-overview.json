# ==========================================
# monitoring/grafana/dashboards/ecommerce-overview.json
# Main Dashboard Configuration
# ==========================================

{
  "dashboard": {
    "title": "E-Commerce Platform Overview",
    "tags": ["ecommerce", "overview"],
    "timezone": "browser",
    "panels": [
      {
        "id": 1,
        "title": "Product Views per Minute",
        "type": "graph",
        "gridPos": {"x": 0, "y": 0, "w": 12, "h": 8},
        "targets": [
          {
            "expr": "rate(product_views_total[1m]) * 60",
            "legendFormat": "Views/min",
            "refId": "A"
          }
        ]
      },
      {
        "id": 2,
        "title": "Recommendations Generated",
        "type": "graph",
        "gridPos": {"x": 12, "y": 0, "w": 12, "h": 8},
        "targets": [
          {
            "expr": "rate(recommendations_total[1m]) * 60",
            "legendFormat": "Recommendations/min",
            "refId": "A"
          }
        ]
      },
      {
        "id": 3,
        "title": "Top 10 Viewed Products",
        "type": "table",
        "gridPos": {"x": 0, "y": 8, "w": 12, "h": 8},
        "targets": [
          {
            "expr": "topk(10, sum by(product_id) (product_views_total))",
            "format": "table",
            "refId": "A"
          }
        ]
      },
      {
        "id": 4,
        "title": "Recommendation Conversion Rate",
        "type": "stat",
        "gridPos": {"x": 12, "y": 8, "w": 6, "h": 4},
        "targets": [
          {
            "expr": "sum(recommendations_converted_total) / sum(recommendations_total) * 100",
            "refId": "A"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "unit": "percent",
            "thresholds": {
              "steps": [
                {"value": 0, "color": "red"},
                {"value": 5, "color": "yellow"},
                {"value": 10, "color": "green"}
              ]
            }
          }
        }
      },
      {
        "id": 5,
        "title": "System CPU Usage",
        "type": "graph",
        "gridPos": {"x": 0, "y": 16, "w": 8, "h": 6},
        "targets": [
          {
            "expr": "100 - (avg by(instance) (rate(node_cpu_seconds_total{mode=\"idle\"}[5m])) * 100)",
            "legendFormat": "{{ instance }}",
            "refId": "A"
          }
        ]
      },
      {
        "id": 6,
        "title": "Memory Usage",
        "type": "graph",
        "gridPos": {"x": 8, "y": 16, "w": 8, "h": 6},
        "targets": [
          {
            "expr": "(1 - (node_memory_MemAvailable_bytes / node_memory_MemTotal_bytes)) * 100",
            "legendFormat": "{{ instance }}",
            "refId": "A"
          }
        ]
      },
      {
        "id": 7,
        "title": "Kafka Consumer Lag",
        "type": "graph",
        "gridPos": {"x": 16, "y": 16, "w": 8, "h": 6},
        "targets": [
          {
            "expr": "kafka_consumer_lag",
            "legendFormat": "{{ topic }} - {{ partition }}",
            "refId": "A"
          }
        ]
      },
      {
        "id": 8,
        "title": "Database Connections",
        "type": "graph",
        "gridPos": {"x": 0, "y": 22, "w": 12, "h": 6},
        "targets": [
          {
            "expr": "pg_stat_database_numbackends{datname=\"ecommerce_analytics\"}",
            "legendFormat": "Active Connections",
            "refId": "A"
          }
        ]
      },
      {
        "id": 9,
        "title": "API Response Time (p95)",
        "type": "graph",
        "gridPos": {"x": 12, "y": 22, "w": 12, "h": 6},
        "targets": [
          {
            "expr": "histogram_quantile(0.95, rate(http_request_duration_seconds_bucket[5m]))",
            "legendFormat": "p95 latency",
            "refId": "A"
          }
        ]
      },
      {
        "id": 10,
        "title": "Spark Job Status",
        "type": "stat",
        "gridPos": {"x": 18, "y": 8, "w": 6, "h": 4},
        "targets": [
          {
            "expr": "sum(spark_job_running_total)",
            "refId": "A"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "unit": "short",
            "thresholds": {
              "steps": [
                {"value": 0, "color": "red"},
                {"value": 1, "color": "green"}
              ]
            }
          }
        }
      },
      {
        "id": 11,
        "title": "Error Rate",
        "type": "graph",
        "gridPos": {"x": 0, "y": 28, "w": 24, "h": 6},
        "targets": [
          {
            "expr": "rate(http_requests_total{status=~\"5..\"}[5m])",
            "legendFormat": "5xx errors - {{ service }}",
            "refId": "A"
          },
          {
            "expr": "rate(http_requests_total{status=~\"4..\"}[5m])",
            "legendFormat": "4xx errors - {{ service }}",
            "refId": "B"
          }
        ]
      }
    ],
    "refresh": "10s",
    "schemaVersion": 27,
    "version": 1
  }
}
