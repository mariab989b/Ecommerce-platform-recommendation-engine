
{
"dashboard": {
    "title": "Kafka Metrics",
    "tags": ["kafka", "streaming"],
    "panels": [
      {
        "id": 1,
        "title": "Messages In per Second",
        "type": "graph",
        "targets": [
          {
            "expr": "rate(kafka_server_brokertopicmetrics_messagesin_total[1m])",
            "legendFormat": "{{ topic }}",
            "refId": "A"
          }
        ]
      },
      {
        "id": 2,
        "title": "Bytes In per Second",
        "type": "graph",
        "targets": [
          {
            "expr": "rate(kafka_server_brokertopicmetrics_bytesin_total[1m])",
            "legendFormat": "{{ topic }}",
            "refId": "A"
          }
        ]
      },
      {
        "id": 3,
        "title": "Consumer Group Lag",
        "type": "graph",
        "targets": [
          {
            "expr": "kafka_consumergroup_lag",
            "legendFormat": "{{ consumergroup }} - {{ topic }}",
            "refId": "A"
          }
        ]
      },
      {
        "id": 4,
        "title": "Under Replicated Partitions",
        "type": "stat",
        "targets": [
          {
            "expr": "kafka_server_replicamanager_underreplicatedpartitions",
            "refId": "A"
          }
        ]
      }
    ]
  }
}